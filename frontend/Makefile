# Makefile for Vite-based development

.PHONY: install dev build lint serve clean

# Install dependencies
install:
	npm install

# Start the development server
dev:
	npm run dev

# Build the project for production
build:
	npm run build

# Run the linter
lint:
	npm run lint

# Serve the built project locally
serve:
	npm run preview

# Clean the project
clean:
	rm -rf dist node_modules
